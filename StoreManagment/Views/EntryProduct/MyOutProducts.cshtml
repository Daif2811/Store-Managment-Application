@model IEnumerable<StoreManagement.Models.ExitProduct>

@{
    ViewBag.Title = "MyOutProducts";
}

<style>
    .head {
        color: white;
        background-color: rgb(65, 6, 104);
        text-align: center;
        margin-top: 30px;
        padding: 15px;
        border-radius: 30px;
    }
</style>


<h2 class="head">My Out Products</h2>

<div style="min-height:360px;">

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EntryProduct.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryProduct.Price)
            </th>
            <th>
                Outer
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryProduct.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryProduct.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExitDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>

            </tr>
        }

    </table>
</div>